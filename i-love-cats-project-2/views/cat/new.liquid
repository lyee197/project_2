{% layout 'layout.liquid' %}
{% block content %}
    <h1>Pictures of Cats</h1>
    <div>
        {% for cats in catStuff %}
            <img src='{{ cats.url }}' alt="Cat Photo" id="catImg" />
        {% endfor%}
        <a href=""><button type="submit" id="newCat">Next Cat</button></a>
        <form action="/cat" method="POST">
            {% for cats in catStuff %}
                <input type="hidden" name="imgUrl" value="{{ cats.url }}"></input>
                <input type="hidden" name="catApiId" value="{{ cats.id }}"></input>
            {% endfor%}
            <button type="submit" id="favorite">Favorite</button>
        </form >
    </div>
{% endblock %}